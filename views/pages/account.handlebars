<html lang="en">

	<head>
		<meta charset="utf-8" />
		<title>{{username}}</title>
	</head>
	<body>
		<main class="account page two-column">
			<div class="left top">
				<div class="account-details standard-card">
					<img
						class="profile-pic"
						alt="profile picture"
						src="https://i.imgur.com/0LpVMsK.png"
					<h6 class="accent">{{username}}</h6>

				</div>
			</div>
			<div class="right bottom">
				<h2>{{username}}'s Art</h2>
				<div class="post-container">
					<div class="post">
						<img src="{{imageSource}}" alt="art-image" />
						<div class="details">
							<h6>{{artTitle}}</h6>
							<h7>{{artist}}</h7>
							<p>{{artDescription}}</p>


						</div>
					</div>
					<div class="post">
						<img src="/public/no_image.jpeg" alt="picture of art" />
						<div class="details">
							<h6>Art Name</h6>
							<p>Artist Name</p>

						</div>
					</div>
				</div>
			</div>
		</main>
	</body>
</html>