<html lang="en">
	<head>
		<meta charset="utf-8" />
		<title>Reset Password</title>
	</head>
	<body>
		<main class="page">
			<h1>Forgot Password</h1>
			<form action="/passwordReset" method="POST" id="password-reset-form">
				<label for="username">
					<p>
						Username
					</p>
				</label>
				<input id="username" name="username" />
				<label for="password">
					<p>
						New Password
					</p>
				</label>
				<input id="password" name="password" />
				<button type="submit" class="block">Reset Password</button>
			</form>
			<div class="error">
				{{#if error}}
					<p>{{error}}</p>
				{{/if}}
			</div>
			<a href="/login">Remember your information? Login here!</a>
		</main>
	</body>
</html>