<html lang="en">
	<head>
		<meta charset="utf-8" />

		<!--                        links                            -->
		<link title="Main CSS" rel="stylesheet" href="/public/css/styles.css" />
		<link
			title="Font Icons"
			rel="stylesheet"
			href="https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css"
		/>
<link
	href="https://unpkg.com/boxicons@2.1.2/dist/boxicons.js"
	rel="stylesheet"
/>
<link
	href="https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css"
	rel="stylesheet"
/>
		<!--                        scripts                            -->
		<script src="https://unpkg.com/boxicons@2.1.2/dist/boxicons.js"></script>

	</head>
	<body>
		<header>
			<h6 class="mainHeader accent">Art Point</h6>
			<form method="POST" action="/home" id="search__form">
		<div class="search__box">
			<button class="search__button"><i
					class="bx bx-search"
					type="text"
				></i></button>
			<input
				type="text"
				name="userSearched"
				id="userSearched"
				class="search__input"
				placeholder="Search an Artist..."
			/>
		</div>
	</form>
	{{#if hasResults}}
		<ul>
			{{#each results}}
				<li>
					<a href="/shows/{{this.user.id}}">{{this.user.username}}</a>
				</li>
			{{/each}}
		</ul>
	{{else}}
		<p class="user__not__found">No Results.</p>
	{{/if}}
			<div class="icon__container">
				<a href="/home"><box-icon
						name="home"
						animation="tada-hover"
					></box-icon></a>
				<a href="#"><box-icon
						name="store-alt"
						animation="tada-hover"
					></box-icon></a>
				<a href="/create"><box-icon
						name="image-add"
						animation="tada-hover"
					></box-icon></a>
				<a href="/account"><box-icon
						name="user"
						animation="tada-hover"
					></box-icon></a>
			</div>

		</header>

		<main>
			<div id="app-container">
				{{{body}}}
			</div>
		</main>

		<footer>
			<div class="social__container">
				<a href="/" class="page__item"><box-icon
						type="logo"
						name="instagram-alt"
					></box-icon></a>
				<a href="/" class="page__item"><box-icon
						type="logo"
						name="snapchat"
					></box-icon></a>
				<a href="/" class="page__item"><box-icon
						type="logo"
						name="facebook-square"
					></box-icon></a>
				<a href="/" class="page__item"><box-icon
						type="logo"
						name="linkedin-square"
					></box-icon></a>
			</div>

			<div class="logo__container">
				<p class="accent">Art Point</p>
			</div>

			<div class="nav__container">
				<a href="/home" class="page__item">home</a>
				<a href="#" class="page__item">artists</a>
				<a href="#" class="page__item">store</a>
				<a href="/aboutUs" class="page__item">About</a>
				<a href="/support" class="page__item">Support</a>
				<a href="/logout" class="page__item">logout</a>
			</div>
		</footer>
		<script
			src="https://code.jquery.com/jquery-2.2.4.min.js"
			crossorigin="anonymous"
		></script>
		<script src="/public/js/updateArtRating.js"></script>

	</body>
</html>